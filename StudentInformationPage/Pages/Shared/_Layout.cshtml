<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Information Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentInformationPage.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgba(95, 26, 95, 1) 100%);
            min-height: 100vh;
        }

        .navbar {
            backdrop-filter: blur(12px);
            border-radius: 0 0 12px 12px;
        }

            .navbar .nav-link,
            .navbar-brand {
                color: #fff !important;
            }

                .navbar .nav-link:hover {
                    color: #d3a1ff !important;
                }

        .btn-outline-dark {
            color: #fff !important;
            border-color: rgba(255,255,255,0.3) !important;
        }

            .btn-outline-dark:hover {
                background-color: rgba(255,255,255,0.2) !important;
            }

        /* Modal Styling for Consistency */
        .modal-content {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid rgba(255,255,255,0.15);
            color: #fff;
        }

        .modal-header {
            border-bottom: 1px solid rgba(255,255,255,0.15);
        }

        .modal-footer {
            border-top: 1px solid rgba(255,255,255,0.15);
        }

        .btn-accent {
            background-color: #d3a1ff;
            color: #000;
            font-weight: 500;
            border-radius: 8px;
        }

            .btn-accent:hover {
                background-color: #b97deb;
                color: #fff;
            }

        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/student-information/Index">
                    Student Information Page
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left side nav -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/student-information/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/student-information/Index">Student</a>
                        </li>
                    </ul>

                    <!-- Right side nav -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-dark btn-sm"
                                    data-bs-toggle="modal" data-bs-target="#logoutModal">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg">
                <div class="modal-header">
                    <h5 class="modal-title fw-semibold" id="logoutModalLabel">
                        <i class="bi bi-exclamation-triangle me-2 text-warning"></i>Confirm Logout
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out of your account?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark btn-sm" style="padding: 0.5rem 1.2rem; border-radius:
0.75rem;" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" asp-page="/LogIn" class="d-inline">
                        <button type="submit" class="btn btn-accent btn-sm">Yes, Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
